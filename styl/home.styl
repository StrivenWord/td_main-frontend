@import 'main/base.styl'
@import 'main/svg.styl'
@import 'main/containers.styl'

// -------

header, main, footer {
	@media screen and (min-width: 1080px) {
		width: 66.67%
	}
	@media screen and (min-width: 801px) and (max-width: 1079px) {
		width: 75%
	}
	margin: 0 auto
	text-align: center
}

// -------
.master-title {
	text-align: left
	font-size: 3.998rem
	margin: 3rem 0
	font-family: 'Alegreya SC', serif
}

.master-nav_note {
	font-size: 1.414rem
	font-style: italic
}

.master-nav {
	li a {
		font-size: 1.999rem
		text-transform: uppercase
		&:hover {
			text-transform: none
			font-variant: small-caps
		}
	}
}

.master-closer {
	@media screen and (min-width: 801px) {
		width: 33.33%
	}
	@media screen and (min-width: 501px) and (max-width: 800px) {
		width: 480px
	}
	@media screen and (max-width: 500px) {
		width: 320px
	}
	margin: 0 auto
	display: flex
	flex-direction: column
	&.case_landing {
		p {
			font-size: 1.414rem
		}
	}
}

.master-illustration {
	padding: 3rem 0
}

.master-finale {
	font-family: 'Alegreya SC', serif
}


// -------
* {
	font-family: 'Alegreya Sans', sans-serif
}